{
  "name": "gamedao",
  "description": "the crowdfinance dao for videogames, content and esports",
  "version": "0.1.0",
  "author": [
    "2075@zero.io"
  ],
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "dev": "next -p 3333",
    "build": "yarn patch && next build",
    "start": "next start",
    "export": "next export",
    "format": "prettier --write --check 'src/**/*.{js,json,jsx,ts,tsx}'",
    "format:verify": "prettier --check 'src/**/*.{js,json,jsx,ts,tsx}'",
    "test": "echo test",
    "codegen": "graphql-codegen --config codegen.yml",
    "patch": "./patch/patch.sh",
    "build:types": "yarn fetch:meta && yarn generate:defs && yarn generate:meta",
    "fetch:meta": "curl -H \"Content-Type: application/json\" -d '{\"id\":\"1\", \"jsonrpc\":\"2.0\", \"method\": \"state_getMetadata\", \"params\":[]}' http://localhost:9933 > metadata.json",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package sample-polkadotjs-typegen/interfaces --input ./src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package sample-polkadotjs-typegen/interfaces --endpoint ./metadata.json --output ./src/interfaces"
  },
  "peerDependencies": {},
  "dependencies": {
    "@apollo/link-context": "^2.0.0-beta.3",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "@apollo/react-hooks": "^4.0.0",
    "@mdx-js/loader": "^1.6.21",
    "@next/mdx": "^10.0.6",
    "@polkadot/api": "^3.6.4",
    "@polkadot/extension-dapp": "^0.36.1",
    "@polkadot/keyring": "^5.4.4",
    "@polkadot/types": "^3.6.4",
    "@polkadot/ui-keyring": "^0.67.1",
    "@polkadot/ui-settings": "0.67.1",
    "@polkadot/util": "^5.4.4",
    "@polkadot/util-crypto": "^5.4.4",
    "@rebass/forms": "^4.0.6",
    "@rebass/preset": "^4.0.5",
    "@types/localforage": "^0.0.34",
    "apollo-client": "^2.6.10",
    "apollo-link-context": "^1.0.20",
    "apollo-server-micro": "^2.19.2",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "discord.js": "^12.5.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "fathom-client": "^3.0.0",
    "formik": "^2.2.5",
    "graphql": "^15.5.0",
    "graphql-type-json": "^0.3.1",
    "isomorphic-unfetch": "^3.0.0",
    "lerna": "^3.22.1",
    "localforage": "^1.9.0",
    "loglevel": "^1.7.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "^10.0.6",
    "next-images": "^1.7.0",
    "next-page-transitions": "^1.0.0-beta.2",
    "nextjs-sitemap-generator": "^1.3.0",
    "nodemailer": "^6.4.16",
    "query-string": "^6.13.7",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-mailchimp-subscribe": "^2.1.0",
    "rebass": "^4.0.7",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "2.0.3",
    "sequelize": "^6.5.0",
    "styled-components": "^5.2.1",
    "toformat": "^2.0.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt-cli": "^11.0.0",
    "@jest/core": "^26.6.3",
    "@picgo/bump-version": "^1.0.3",
    "@types/jest": "^26.0.19",
    "@types/node": "14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rebass": "^4.0.3",
    "@types/styled-components": "5.1.7",
    "babel-plugin-styled-components": "^1.10.7",
    "commitizen": "^4.2.3",
    "concurrently": "^5.1.0",
    "conventional-changelog": "^3.1.24",
    "cz-customizable": "^6.2.0",
    "dotenv": "^8.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "url-loader": "^4.0.0",
    "webpack": "^5.19.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@picgo/bump-version/.cz-config.js"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "enzyme.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/enzyme.js",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format:verify"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "printWidth": 160,
    "bracketSpacing": true
  }
}
