{
	"name": "play-zero",
	"version": "0.1.0",
	"description": "a dao for videogames â€” landingpage",
	"license": "UNLICENSED",
	"scripts": {
		"dev": "next -p 3007",
		"build": "next build",
		"start": "next start",
		"export": "next export",
		"format": "prettier --loglevel error --write '{src,pages}/**/*.{js,json,jsx,ts,tsx}'",
		"format:verify": "prettier --loglevel error --list-different '{src,pages}/**/*.{js,json,jsx,ts,tsx}'",
		"test": "echo test"
	},
	"dependencies": {
		"@apollo/react-hooks": "^3.1.3",
		"@rails/actioncable": "^6.0.2-1",
		"@rebass/forms": "^4.0.6",
		"@sendgrid/mail": "^6.5.1",
		"apollo-cache-inmemory": "^1.6.5",
		"apollo-client": "^2.6.8",
		"apollo-link-http": "^1.5.16",
		"apollo-link-ws": "^1.0.19",
		"apollo-server-micro": "^2.10.1",
		"formik": "^2.0.6",
		"graphql": "^14.6.0",
		"graphql-ruby-client": "^1.7.4",
		"isomorphic-unfetch": "^3.0.0",
		"next": "^9.1.3",
		"next-images": "^1.2.0",
		"next-page-transitions": "^1.0.0-beta.2",
		"next-with-apollo": "^5.0.0",
		"nextjs-sitemap-generator": "^0.5.0",
		"react": "^16.11.0",
		"react-apollo": "^3.1.3",
		"react-dom": "^16.11.0",
		"react-icons": "^3.8.0",
		"react-mailchimp-subscribe": "^2.1.0",
		"rebass": "^4.0.7",
		"styled-components": "^4.4.1",
		"subscriptions-transport-ws": "^0.9.16",
		"yup": "^0.27.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@commitlint/prompt-cli": "^8.2.0",
		"@picgo/bump-version": "^1.0.3",
		"@types/next": "^9.0.0",
		"@types/node": "^13.7.4",
		"@types/react": "16.9.11",
		"@types/react-dom": "16.9.4",
		"@types/react-mailchimp-subscribe": "^2.0.2",
		"@types/rebass": "^4.0.3",
		"@types/styled-components": "4.4.0",
		"@types/yup": "^0.26.25",
		"babel-plugin-module-resolver": "^3.2.0",
		"babel-plugin-styled-components": "^1.10.0",
		"conventional-changelog": "^3.1.14",
		"dotenv": "^8.2.0",
		"husky": "^3.0.9",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.2",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"ts-jest": "^24.1.0",
		"typescript": "^3.7.2",
		"url-loader": "^2.2.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"**/*.(test|spec).(ts|tsx)"
		],
		"globals": {
			"ts-jest": {
				"babelConfig": true,
				"tsConfig": "jest.tsconfig.json"
			}
		},
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"enzyme.js"
		],
		"setupTestFrameworkScriptFile": "<rootDir>/enzyme.js",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"text-summary"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
			"\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged && yarn format:verify",
			"pre-push": "yarn format"
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"bracketSpacing": true
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css}": [
			"prettier --write",
			"git add"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
